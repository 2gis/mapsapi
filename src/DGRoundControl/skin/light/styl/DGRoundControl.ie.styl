    filter: unquote("progid:DXImageTransform.Microsoft.AlphaImageLoader(
        src='__BASE_URL__/img/DGRoundControl_round-control-light.png',
        sizingMethod='scale')");

    &:before {
        margin: 0;
        padding: 0;
        border: none;
        background: none;
        }
    }
.leaflet-disabled.dg-control-round,
.leaflet-disabled.dg-control-round:hover {
    filter: unquote("progid:DXImageTransform.Microsoft.AlphaImageLoader(
        src='__BASE_URL__/img/DGRoundControl_round-control-disabled-light.png',
        sizingMethod='scale')");
    }
.dg-control-round:hover,
.dg-control-round_state_active:hover {
    filter: unquote("progid:DXImageTransform.Microsoft.AlphaImageLoader(
        src='__BASE_URL__/img/DGRoundControl_round-control-hover-light.png',
        sizingMethod='scale')");
    }
.dg-control-round:active,
.dg-control-round_state_active {
