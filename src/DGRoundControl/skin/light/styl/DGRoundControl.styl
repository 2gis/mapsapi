.dg-control-round {
    border: 5px solid transparent;
    box-shadow: 0 2px 5px 0 rgba(0, 0, 0, 0.3);
    }
    .dg-control-round:before {
        position: absolute;
        margin: -6px 0 0 -6px;
        padding: 5px;
        width: 100%;
        height: 100%;
        border: 1px solid #fff;
        border-radius: 50%;
        background: #f0f0f0;
        background: rgba(240,240,240,.8);
        content: '';
        }

    .dg-control-round__icon {
        box-shadow: 0 0 1px 0 rgba(0, 0, 0, 0.4);
        }
    .dg-control-round__icon:active,
    .dg-control-round__icon_state_active {
        box-shadow: 0 0 1px 0 rgba(0, 0, 0, 0.4);
        }
    .dg-control-round__icon_state_active:hover {
        box-shadow: 0 2px 2px 0 rgba(0, 0, 0, 0.4);
        }
    .dg-control-round__icon_state_active:active {
        box-shadow: 0 2px 2px 0 rgba(0, 0, 0, 0.4);
        }
    .leaflet-disabled .dg-control-round__icon {
        background: #fff;
        }
