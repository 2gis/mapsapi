.leaflet-control a:focus,
.leaflet-control a {
    outline: none !important;
    }

.dg-control-round {
    width: 30px;
    height: 30px;
    border-radius: 50%;
    cursor: default;
    }
    .dg-control-round__icon {
        position: absolute;
        width: 100%;
        height: 100%;
        border-radius: 50%;
        background-color: #fff;
        background-image: linear-gradient(to bottom, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.12) 100%);
        color: #2b2a29;
        text-align: center;
        text-shadow: 0 1px 0 #fff;
        font-size: 30px;
        line-height: 30px;
        cursor: pointer;

        &:before {
            position: absolute;
            top: 0;
            right: 0;
            bottom: 0;
            left: 0;
            display: block;
            margin: auto;
            background-size: contain;
            background-repeat: no-repeat;
            content: '';
            }
        }
    .leaflet-disabled .dg-control-round__icon:active,
    .leaflet-disabled .dg-control-round__icon:hover,
    .leaflet-disabled .dg-control-round__icon {
        box-shadow: none;
        cursor: default;
        }
    .dg-control-round__icon:hover,
    .dg-control-round__icon:focus {
        background-image: linear-gradient(to bottom, rgba(0, 0, 0, 0.08) 0%, rgba(0, 0, 0, 0) 100%);
        }
    .dg-control-round__icon:active,
    .dg-control-round__icon_state_active {
        background-image: linear-gradient(to bottom, rgba(0, 0, 0, 0.15) 0%, rgba(0, 0, 0, 0) 100%);
        }
    .dg-control-round__icon_state_active:hover,
    .dg-control-round__icon_state_active:focus {
        background-image: linear-gradient(to bottom, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.12) 100%);
        }
    .dg-control-round__icon_state_active:active {
        background-image: linear-gradient(to bottom, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.12) 100%);
        }
