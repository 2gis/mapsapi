/* baron */

.scroller-wrapper {
    position: relative;
    overflow: hidden;
}

.scroller::-webkit-scrollbar {
    width: 0;
}
.scroller__bar-wrapper {
    position: absolute;
    top: 18px;
    bottom: 4px;
    right: 3px;
    width: 7px;
    border-radius: 5px;
}
.dg-popup-header + .dg-popup-container-wrapper .scroller__bar-wrapper {
    top: 4px;
}

.scroller__bar {
    position: absolute;
    width: 7px;
    border-radius: 3px;
    pointer-events: auto;
    min-height:20px;
}

.dg-baron-hide {
    overflow: auto;
}
.dg-baron-hide .scroller__bar-wrapper {
    visibility: hidden;
}