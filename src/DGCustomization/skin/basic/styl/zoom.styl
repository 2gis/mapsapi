/*Zoom control styles*/

.dg-zoom {
    width: 40px;
    height: 74px;
}
.leaflet-bottom .dg-zoom {
    margin-bottom: 40px;
}
.dg-control-round.dg-zoom__in {
    position: absolute;
    top: 0;
    left: 0;
}
.dg-zoom__in:after {
    content: '';
    position: absolute;
    top: 35px;
    left: 50%;
    width: 14px;
    height: 4px;
    margin: 0 0 0 -7px;
    box-shadow: 0 0 3px 2px rgba(0,0,0,.3);
    z-index: -1;
}
.dg-control-round.dg-zoom__out {
    position: absolute;
    top: 40px;
    left: 0;
    right: 0;
    margin: auto;
    width: 22px;
    height: 22px;
    box-shadow: 0 2px 3px 0 rgba(0,0,0,.3);
}
.leaflet-disabled .dg-control-round_icon.dg-zoom__out-button:after,
.leaflet-disabled .dg-control-round_icon.dg-zoom__in-button:after,
.leaflet-disabled .dg-control-round_icon.dg-zoom__in-button:before {
    box-shadow: none;
}
.dg-zoom__in-button:hover:before,
.dg-zoom__in-button:hover:after,
.dg-zoom__out-button:hover:after {
    background: #000;
}
/* Buttons appearance */
.dg-control-round_icon.dg-zoom__in-button:before {
    width: 14px;
    height: 2px;
}
.dg-control-round_icon.dg-zoom__in-button:after {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    margin: auto;
    height: 14px;
    width: 2px;
}
.dg-control-round_icon.dg-zoom__out-button:before {
    bottom: auto;
    width: 14px;
    height: 4px;
    top: -7px;
}
.dg-control-round_icon.dg-zoom__out-button:after {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    margin: auto;
    width: 10px;
    height: 2px;
}
.dg-control-round_icon.dg-zoom__in-button:before,
.dg-control-round_icon.dg-zoom__in-button:after,
.dg-control-round_icon.dg-zoom__out-button:after {
    background: #686868;
    background: rgba(0,0,0,.5);
    box-shadow: 0 1px #fff;
}
.dg-control-round:hover .dg-control-round_icon.dg-zoom__in-button:before,
.dg-control-round:hover .dg-control-round_icon.dg-zoom__in-button:after,
.dg-control-round:hover .dg-control-round_icon.dg-zoom__out-button:after {
    background: #515151;
    background: rgba(0,0,0,.6);
}