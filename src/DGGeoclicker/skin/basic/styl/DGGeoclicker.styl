@font-face {
    font-weight: normal;
    font-style: normal;
    font-family: 'SuisseCond';
    src: url('__BASE_URL__/fonts/suisseintl-cond.eot');
    src: url('__BASE_URL__/fonts/suisseintl-cond.eot?#iefix') format('embedded-opentype'),
         url('__BASE_URL__/fonts/suisseintl-cond.woff') format('woff'),
         url('__BASE_URL__/fonts/suisseintl-cond.ttf') format('truetype'),
         url('__BASE_URL__/fonts/suisseintl-cond.svg#suisse_intlcondensed') format('svg');
    }

.dg-map-geoclicker-address {
    padding: 0 0 0 24px;
    color: #aaa;
    font: 12px/16px Arial;
    }
    .dg-map-geoclicker-address-header {
        position: relative;
        margin: 6px 0 2px 24px;
        font: 16px/16px Arial;
        }

.building-callout__body {
    position: relative;
    }
    .building-callout__body:first-child:before {
        position: absolute;
        top: 1px;
        left: 0px;
        width: 9px;
        height: 11px;
        background-size: contain;
        content: '';
        }

.dg-map-geoclicker-drilldown {
    padding: 0 0 0 24px;
    font: 12px/16px Arial;
    }

.dg-map-geoclicker-elevation {
    display: block;
    margin-bottom: 1px;
    color: #a0a0a0;
    font-size: 15px;
    }

.dg-map-geoclicker-purpose {
    position: relative;
    padding: 3px 0 2px 24px;
    font-size: 16px;
    }
    .dg-map-geoclicker-purpose:before {
        position: absolute;
        top: 8px;
        left: 0;
        width: 8px;
        height: 12px;
        background-size: contain;
        background-repeat: no-repeat;
        content: '';
        }
    .dg-map-geoclicker-purpose_type_street:before {
        width: 12px;
        }
    .dg-map-geoclicker-purpose_type_settlement:before {
        width: 12px;
        background-image: url(__BASE_URL__/img/callout-settlement.png);
        }
    .dg-map-geoclicker-purpose_type_sight:before {
        background-image: url(__BASE_URL__/img/icon-sight.png);
        background-position: 0 0;
        }

.building-callout__list {
    margin: 8px 8px 8px 24px;
    padding: 0;
    color: #ffe6aa;
    list-style: none;
    }
    .building-callout__list-item {
        position: relative;
        margin: 0 0 4px;
        font: 12px/16px Arial;
        }
        .building-callout__list-item:before {
            position: absolute;
            top: 6px;
            left: -21px;
            width: 6px;
            height: 6px;
            background-size: contain;
            content: '';
            }

.dg-map-geoclicker-sight-description {
    overflow: hidden;
    padding: 0.5em 0 0 24px;
    max-height: 2.9em;
    }

.dg-showmoresight {
    margin-left: 24px;
    border-bottom: 1px dashed;
    text-decoration: none;
    }
    .dg-showmoresight:after {
        position: absolute;
        margin-left: 5px;
        content: '>';
        font-weight: bold;
        }

.dg-showmorehouse {
    color: #0070C0;
    text-decoration: none;
    font-size: 12px;
    line-height: 24px;
    }

.dg-showmorehouse + sup {
    position: relative;
    left: 3px;
    color: #A0A0A0;
    text-decoration: none;
    font-size: 10px;
    line-height: 24px;
    }

.dg-map-geoclicker-buildingname {
    margin: 0 0 5px !important;
    margin-right: 10px;
    font-weight: bold;
    font-size: 15px;
    }

.dg-popup-header,
.dg-popup-footer {
    position: relative;
    overflow: hidden;
    }

.popup_footer_btns {
    display: table;
    width: 100%;
    }
    .popup_footer_btn-wrapper {
        display: table-cell;
        }
        .popup_footer_btn {
            position: relative;
            display: inline-block;
            box-sizing: border-box;
            margin-left: 5%;
            width: 95%;
            border-radius: 2px;
            text-align: center;
            text-decoration: none;
            font: 12px/24px Arial;
            cursor: pointer;
            transition: all .1s;
            }
        .popup_footer_btn-wrapper:first-child .popup_footer_btn {
            margin: 0;
            width: 100%;
            }
        .popup_footer_btn:hover {
            transition: all .2s; /* @TODO: all? */
            }
        .popup_footer_btn__icon {
            }
            .popup_footer_btn__icon:before {
                display: inline-block;
                margin: -2px 0 0 0;
                margin-right: 0.4em;
                width: 12px;
                height: 12px;
                background-size: contain;
                background-repeat: no-repeat;
                content: '';
                vertical-align: middle;
                }

    .popup-btn-goto:before {
        width: 20px;
        height: 7px;
        background-size: contain;
        background-repeat: no-repeat;
        }

    .popup-btn-firmCard-back:before {
        width: 10px;
        height: 6px;
        background-size: contain;
        background-repeat: no-repeat;
        }

    .popup-btn-firmList-back:before {
        width: 10px;
        height: 6px;
        background-size: contain;
        background-repeat: no-repeat;
        }

.dg-showlesshouse {
    position: relative;
    top: 6px;
    margin: 0 15px 10px;
    color: #0070C0;
    text-decoration: none;
    font-size: 12px;
    line-height: 24px;
    }

.dg-popup-header-title {
    display: block;
    white-space: normal;
    font: 22px/24px 'SuisseCond', 'Arial narrow', Arial;
    }

.dg-popup-header-title__firmcard {
    position: relative;
    overflow: hidden;
    max-height: 3.4em;
    }
    .dg-popup-header-title__firmcard__teaser {
        display: -webkit-box;
        height: 3.3em;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        }

.clamped-line {
    display: block;
    white-space: nowrap;
    }
.clamped-line-last {
    overflow: hidden;
    width: 100%;
    text-overflow: ellipsis;
    }

.dg-popup-firm-loading {
    margin: 0 auto;
    width: 200px;
    height: 40px;
    background: url("__BASE_URL__/img/loader.gif") no-repeat scroll 50% 50% transparent;
    vertical-align: middle;
    }

.loader-wrapper {
    display: table-cell;
    vertical-align: middle;
    text-align: center;
    }

.dg-geoclicker-loader {
    position: absolute;
    top: 50%;
    left: 50%;
    margin: -16px 0 0 -74px !important;
    }

.leaflet-retina .dg-map-geoclicker-purpose_type_settlement:before {
    background-image: url(__BASE_URL__/img/callout-settlement-2x.png);
    }

.leaflet-retina .dg-map-geoclicker-purpose_type_sight:before {
    background-image: url(__BASE_URL__/img/icon-sight-2x.png);
    }

@keyframes preloader__outer {
    to { transform: rotate(360deg); }
    }
@keyframes preloader__inner {
    to { transform: rotate(-360deg); }
    }

.preloader {
    position: relative;
    margin: 0 auto;
    width: 200px;
    height: 44px;
    vertical-align: middle;
    }
.preloader_animation_false {
    background: url("__BASE_URL__/img/loader.gif") no-repeat scroll 50% 50% transparent;
    }
    .preloader_animation_true.preloader:before {
        position: absolute;
        top: 50%;
        left: 50%;
        margin: -22px 0 0 -22px;
        width: 44px;
        height: 44px;
        outline: 1px solid transparent;
        content: '';
        animation: preloader__outer 5s linear infinite;
        image-rendering: optimizeQuality;
        }
    .preloader_animation_true.preloader:after {
        position: absolute;
        top: 50%;
        left: 50%;
        margin: -16px 0 0 -16px;
        width: 32px;
        height: 32px;
        outline: 1px solid transparent;
        content: '';
        animation: preloader__inner 4s linear infinite;
        image-rendering: optimizeQuality;
        }
    .preloader_animation_true.preloader_small:before {
        margin: -12px 0 0 -12px;
        width: 24px;
        height: 24px;
        background-repeat: no-repeat;
        }
    .preloader_animation_true.preloader_small:after {
        margin: -6px 0 0 -6px;
        width: 12px;
        height: 12px;
        background-repeat: no-repeat;
        }
    .preloader_animation_true.preloader_scheme_regular:before {
        background-image: url(__BASE_URL__/img/DGGeoclicker_preloader_regular-big-outer.svg);
        }
    .preloader_animation_true.preloader_scheme_regular:after {
        background-image: url(__BASE_URL__/img/DGGeoclicker_preloader_regular-big-inner.svg);
        }
    .preloader_animation_true.preloader_scheme_regular.preloader_small:before {
        background-image: url(__BASE_URL__/img/DGGeoclicker_preloader_regular-small-outer.svg);
        }
    .preloader_animation_true.preloader_scheme_regular.preloader_small:after {
        background-image: url(__BASE_URL__/img/DGGeoclicker_preloader_regular-small-inner.svg);
        }
