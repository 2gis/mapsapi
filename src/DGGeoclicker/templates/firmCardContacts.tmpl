<% for (var i = 0, gl = groups.length; i < gl; i++) { %>
    <% for (var j = 0, l = groups[i].contacts.length; j < l; j++) { %>
        <%if (groups[i].contacts[j].type === 'phone' || groups[i].contacts[j].type === 'fax') {%>
            <div class="firm-card__phone">
                <span class="firm-card__phone-num">
                    <%=groups[i].contacts[j].value%>
                    <% if(groups[i].contacts[j].comment) { %>
                        <span class="firm-card__comment">&mdash;  <%=groups[i].contacts[j].comment%></span>
                    <% } %>
                </span>
            </div>
        <% } %>
        <% if(groups[i].contacts[j].type === 'website') { %>
            <div class="firm-card__site">
                <a href="<%=groups[i].contacts[j].alias%>" target="_blank" class="link_scheme_dark firm-card__sitelink">  <%=groups[i].contacts[j].alias%> </a>
            </div>
        <% } %>
    <% } %>
<% } %>
